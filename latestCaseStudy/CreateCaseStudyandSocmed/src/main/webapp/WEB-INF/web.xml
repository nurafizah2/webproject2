<?xml version="1.0" encoding="UTF-8"?>
<web-app version="6.0" xmlns="https://jakarta.ee/xml/ns/jakartaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd">
    
    <servlet>
        <servlet-name>RegisterServlet</servlet-name>
        <servlet-class>Controller.RegisterServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>Controller.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MarketingServlet</servlet-name>
        <servlet-class>Controller.MarketingServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SocmedServlet</servlet-name>
        <servlet-class>Controller.SocmedServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CaseStudyServlet</servlet-name>
        <servlet-class>Controller.CaseStudyServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>RegisterServlet</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MarketingServlet</servlet-name>
        <url-pattern>/MarketingServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SocmedServlet</servlet-name>
        <url-pattern>/SocmedServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CaseStudyServlet</servlet-name>
        <url-pattern>/CaseStudyServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
